{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": ".tmp",
    "target": "es5",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "commonjs"
  },
  "filesGlob": [
    "typings/**/*.d.ts",
    "spec/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".tmp"
  ]
}